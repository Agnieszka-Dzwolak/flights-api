<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Flights</title>
    </head>
    <body>
      <%- include('./includes/nav.ejs', {token: token})%>
      <header>
        <h1>Flights</h1>
        <% flights.forEach((flight)=>{%>
          <div class="flight-container">
            <h2>From: <%= flight.from%></h2>
            <h2>To: <%= flight.to%></h2>
            <p>Date: <%= flight.date%></p>
            <p>Price: $<%= flight.price%></p>
            <p>Company: <%= flight.company%></p>

            <button><a href="/api/flights/<%=flight.id%>">Details</a></button>
          </div>

        <%})%>
      </header>
    </body>
</html>
